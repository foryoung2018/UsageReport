<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_other_accounts"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_other_accounts_tips"
        style="@style/TextAppearance.HtcAccountDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/htcaccount_margin_m"
        android:layout_marginLeft="@dimen/htcaccount_layout_margin_sides"
        android:layout_marginRight="@dimen/htcaccount_layout_margin_sides"
        android:layout_marginTop="@dimen/htcaccount_margin_m"
        android:text="@string/txt_other_accounts_tips" />

    <LinearLayout
        android:id="@+id/list_other_accounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/htcaccount_layout_margin_sides"
        android:layout_marginRight="@dimen/htcaccount_layout_margin_sides"
        android:divider="@drawable/common_list_divider"
        android:dividerPadding="@dimen/htcaccount_margin_l"
        android:orientation="vertical"
        android:showDividers="middle" />

</LinearLayout>