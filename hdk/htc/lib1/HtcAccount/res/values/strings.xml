<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Application label shows in Account & Sync. -->
    <string name="label_htc_account">HTC Account</string>

    <!-- Network unavailable dialog. Title. -->
    <string name="dialog_title_network_unavailable">Unable to connect</string>

    <!-- Network unavailable dialog. Message. -->
    <string name="dialog_msg_network_unavailable">You need a network connection to use this application. Please connect to mobile data or Wi-Fi.</string>

    <!-- Progress dialog message to show when working. -->
    <string name="dialog_msg_please_wait">Please wait…</string>

    <!-- General sign-in/sign-up error. -->
    <string name="toast_txt_error_general_failure">We are unable to connect to the HTC servers. Please try again later.</string>

    <!-- Data network unavailable -->
    <string name="toast_txt_error_network_unavailable">You need a network connection to use this application.</string>

    <!-- Unable to access Google account. -->
    <string name="toast_txt_no_google_account">Please create a Google Account to sign in with.</string>

    <!-- Accessing integrated social networks failed. -->
    <string name="toast_txt_error_access_social_networks_failed">Unable to connect. Please try again.</string>

    <!-- General Google account sign-in/sign-up error. -->
    <string name="toast_txt_error_signing_in_google_account">We are unable to access your Google Account. Please make sure the account is active.</string>

    <!-- Request permission dialog title -->
    <string name="dialog_msg_account_permission_title">Require permissions</string>

    <!-- Request permission dialog message -->
    <string name="dialog_msg_account_permission_rationale">To sign in with Google Account, this app needs to access your account. Please allow permission when asked.</string>

    <!-- Request permission dialog message, which direct user to app detailed Settings -->
    <string name="dialog_msg_account_permission_settings">"To work properly, this app needs to access your accounts. You can manage %1$s’s permissions in Settings."</string>

    <!--
    ********************************************************************************
    Wizard Activity
    ********************************************************************************
    -->

    <!-- Title -->
    <string name="title_set_up_account">Create an HTC Account</string>

    <!-- Email field hint. -->
    <string name="hint_email">Email address</string>

    <!-- Text tips for associated account  -->
    <string name="txt_other_accounts_tips">An HTC Account with your email address has already been created. Tap an account to sign in, or create a new account.</string>

    <!-- Subscribe news letter. -->
    <string name="txt_subscribe_newsletter">Email me offers, product info and newsletters from HTC.</string>

    <!-- Text tips for the email retrieved from social account. The parameter %s will be replaced by a string. -->
    <string name="txt_social_email_tips">Using email from %s account:</string>

    <!-- Sign up button. -->
    <string name="btn_create_account">Create account</string>

    <!-- Create new account button. -->
    <string name="btn_create_new_account">Create new account</string>

    <!--
    Legal tips in create account page. The parameter %1$s will be replaced by the txt_sign_up_legal_tips_tos_link, and %2$s will be replaced by txt_sign_up_legal_tips_privacy_link.
    Example: "By creating an account, you agree to HTC Account's Terms and Conditions and acknowledge the Privacy Policy. You must be at least 14 years old to sign up."
    -->
    <string name="txt_sign_up_legal_tips">By creating an account, you agree to HTC Account\'s %1$s and acknowledge the %2$s. You must be at least 14 years old to sign up.</string>

    <!-- Facebook legal tips. Terms and conditions hyper link. -->
    <string name="txt_sign_in_legal_tips_tos_link">Terms and Conditions</string>

    <!-- Facebook legal tips. Privacy hyper link. -->
    <string name="txt_sign_in_legal_tips_privacy_link">Privacy Policy</string>

    <!-- HTC's Privacy policy -->
    <string name="dialog_title_privacy_policy">Privacy policy</string>

    <!-- HTC terms and conditions dialog. Title. -->
    <string name="dialog_title_term_of_service">Terms and conditions</string>

    <!-- Email verification dialog. Title for dialog box -->
    <string name="dialog_title_email_verification">Verify your account</string>

    <!-- Open mail button text -->
    <string name="dialog_btn_open_mail">Open mail</string>

    <!-- Later button text. -->
    <string name="dialog_btn_later">Not now</string>

    <!--
    Email verification dialog. Message for dialog box. The parameter %1$s will be replaced by email address, and %2$s will be replaced by dialog_link_resend.
    Example: "To sign in to HTC Account, you need to verify your email address using the link sent to email@domain.com.\n\nIf you didn't get the email, check your spam folder or resend it now."
    -->
    <string name="dialog_msg_email_verification">To sign in to HTC Account, you need to verify your email address using the link sent to %1$s.\n\nIf you didn\'t get the email, check your spam folder or %2$s it now.</string>

    <!-- Email verification dialog. Resend link text. -->
    <string name="dialog_link_resend">resend</string>

    <!-- Toast to ask user to provide email address -->
    <string name="toast_txt_provide_email">Email address required.</string>

    <!-- Toast to tell user that the email is incorrect. -->
    <string name="toast_txt_error_email_incorrect">Please enter a valid email address.</string>

    <!-- Toast to show email address. For example, Email sent to: someone@domain.com -->
    <string name="toast_txt_email_sent_to_tip">Email sent to: %s</string>

