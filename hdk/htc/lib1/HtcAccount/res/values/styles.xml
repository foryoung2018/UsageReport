<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Using device default theme as app theme. -->
    <style name="HTCAccountTheme" parent="android:Theme.Holo.Light.NoActionBar" />

    <!--
    Theme with transparent background. 
    The reason that we don't use android "Theme.Translucent.NoTitleBar" or "Theme.NoDisplay"
    is becasue somehow they both apply Android 2.3 styles.
    -->
    <style name="HTCAccountTranslucentTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="list_body_primary_m" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/htcaccount_list_body_primary_m</item>
        <item name="android:textColor">@color/light_primaryfont</item>
    </style>

    <style name="TextAppearance.HtcAccountDescription" parent="android:TextAppearance.Medium">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/htcaccount_description_text_size</item>
    </style>
</resources>
