<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/htcdrawer_content_view_height"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="@dimen/htcdrawer_content_item_size"
        android:layout_height="@dimen/htcdrawer_content_item_size"
        android:layout_weight="1"
        android:src="@drawable/common_flag_rest" />

    <ImageView
        android:layout_width="@dimen/htcdrawer_content_item_size"
        android:layout_height="@dimen/htcdrawer_content_item_size"
        android:layout_weight="1"
        android:src="@drawable/common_rating_rest" />

    <ImageView
        android:layout_width="@dimen/htcdrawer_content_item_size"
        android:layout_height="@dimen/htcdrawer_content_item_size"
        android:layout_weight="1"
        android:src="@drawable/common_collect_rest" />

</LinearLayout>