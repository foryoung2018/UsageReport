<com.htc.preference.HtcPreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <com.htc.preference.HtcPreference
        android:key="reset_screen"
        android:title="Reset screen" />

    <com.htc.preference.HtcPreferenceCategory
        android:title="Progress bar">

        <com.htc.preference.HtcPreference
            android:key="progress_minus"
            android:title="-" />

        <com.htc.preference.HtcCheckBoxPreference
            android:key="show_hide_progress"
            android:title="Show Progress bar" />

        <com.htc.preference.HtcPreference
            android:key="progress_plus"
            android:title="+" />

    </com.htc.preference.HtcPreferenceCategory>

    <com.htc.preference.HtcPreferenceCategory
        android:title="Buttons">

        <com.htc.preference.HtcCheckBoxPreference
            android:key="show_hide_back"
            android:title="Show BACK button"/>

        <com.htc.preference.HtcCheckBoxPreference
            android:key="show_hide_next"
            android:title="Show NEXT button"/>

        <com.htc.preference.HtcCheckBoxPreference
            android:key="enable_disable_next"
            android:title="Enable NEXT button"/>

    </com.htc.preference.HtcPreferenceCategory>

    <com.htc.preference.HtcPreferenceCategory
        android:title="Footer">

        <com.htc.preference.HtcCheckBoxPreference
            android:key="show_hide_footer"
            android:title="Show Footer"/>

        </com.htc.preference.HtcPreferenceCategory>

</com.htc.preference.HtcPreferenceScreen>
