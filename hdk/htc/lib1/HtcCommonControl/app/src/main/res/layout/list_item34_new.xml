    xmlns:htc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.htc.lib1.cc.widget.HtcListItemLabeledLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        htc:layout_type="size_rest|center_vertical"
        android:text="@string/description_text"
        android:textAllCaps="false" >

        <com.htc.lib1.cc.widget.HtcRimButton
            style="@style/button_primary_xs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_button" />
    </com.htc.lib1.cc.widget.HtcListItemLabeledLayout>

</com.htc.lib1.cc.widget.ListItem>