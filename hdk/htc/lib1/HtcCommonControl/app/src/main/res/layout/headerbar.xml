<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.htc.lib1.cc.widget.HeaderBarMiddle
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        bubble_visibility="visible"
        progress_visibility="visible">

        <com.htc.lib1.cc.widget.HeaderBarImage
            android:id="@+id/headerImgRight"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            panel_gravity="right_panel"/>
        <com.htc.lib1.cc.widget.HeaderBarImage
            android:id="@+id/headerImgLeft"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            panel_gravity="left_panel"/>
        <com.htc.lib1.cc.widget.HeaderBarText
            android:id="@+id/headerText"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            panel_gravity="center_panel"/>

    </com.htc.lib1.cc.widget.HeaderBarMiddle>

</LinearLayout>
