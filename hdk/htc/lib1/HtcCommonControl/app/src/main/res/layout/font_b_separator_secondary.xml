<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/font_list"
        android:orientation="vertical" >

        <Button
            style="@style/b_separator_secondary_xl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/section_b_divider_top"
            android:text="b_separator_secondary_xl" />

        <Button
            style="@style/b_separator_secondary_l"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/section_b_divider_top"
            android:text="b_separator_secondary_l" />

        <Button
            style="@style/b_separator_secondary_m"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/section_b_divider_top"
            android:text="b_separator_secondary_m" />

        <Button
            style="@style/b_separator_secondary_s"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/section_b_divider_top"
            android:text="b_separator_secondary_s" />

        <Button
            style="@style/b_separator_secondary_xs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/section_b_divider_top"
            android:text="b_separator_secondary_xs" />
    </LinearLayout>

</ScrollView>