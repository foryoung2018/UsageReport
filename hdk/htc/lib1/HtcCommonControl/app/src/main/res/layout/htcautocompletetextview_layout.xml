<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginRight="@dimen/margin_m"
        android:layout_marginBottom="@dimen/margin_m"
        android:text="Please type AA to see the effect of enableDropDownMinWidth(boolean)!"
        style="@style/darklist_primary_m"
        />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="#ffffff" >

        <com.htc.lib1.cc.widget.HtcAutoCompleteTextView
            android:id="@+id/bright_input"
            style="@style/input_default_m"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_m_3"
            android:layout_marginRight="@dimen/margin_m_3"
            android:layout_gravity="center"
            android:hint="enableDropDownMinWidth(false)" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="#000000" >

        <com.htc.lib1.cc.widget.HtcAutoCompleteTextView
            android:id="@+id/dark_input"
            style="@style/input_default_m"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_m_3"
            android:layout_marginRight="@dimen/margin_m_3"
            android:layout_gravity="center"
            android:hint="enableDropDownMinWidth(true)" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="#ffffff" >

        <com.htc.lib1.cc.widget.HtcAutoCompleteTextView
            android:id="@+id/full_input"
            style="@style/input_default_m"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_m"
            android:layout_marginRight="@dimen/margin_m" />
    </FrameLayout>

</LinearLayout>