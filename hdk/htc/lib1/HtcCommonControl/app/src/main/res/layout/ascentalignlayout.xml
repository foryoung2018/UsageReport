<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            style="@style/fixed_separator_primary_xl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_l"
            android:text="AlignBasic-Basic-AlignBasic:" />

        <include layout="@layout/ascentalign_1basic2alignbasic" />

        <TextView
            style="@style/fixed_separator_primary_xl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_l"
            android:text="Basic-AlignBasic-Other:" />

        <include layout="@layout/ascentalign_1basic1alignbasic1other" />

        <TextView
            style="@style/fixed_separator_primary_xl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_l"
            android:text="BasicViewGone:" />

        <include layout="@layout/ascentalign_basicviewgone" />

        <TextView
            style="@style/fixed_separator_primary_xl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_l"
            android:text="AlignBasicViewGone:" />

        <include layout="@layout/ascentalign_alignbasicviewgone" />

        <TextView
            style="@style/fixed_separator_primary_xl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_l"
            android:text="ViewGroup-ViewGroup:" />

        <include layout="@layout/ascentalign_2viewgroup" />
    </LinearLayout>

</ScrollView>