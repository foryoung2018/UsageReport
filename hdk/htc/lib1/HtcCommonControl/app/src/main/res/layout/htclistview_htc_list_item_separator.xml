<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/htc_list_item_separator"
    android:layout_width="wrap_content"
    android:layout_height="20dp"
    android:background="@drawable/section_divider_top"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/txt_1x1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingLeft="8dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/txt_1x2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingRight="8dp"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/img_1x1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/txt_1x2"
        android:paddingRight="8dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_1x3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true" />

</RelativeLayout><!-- style="@style/notification_info_m" -->
