<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:paddingLeft="@dimen/margin_m_2"
    >
    <!--android:layout_height="@dimen/htc_list_item_height"-->
    <ImageView
        android:paddingTop="@dimen/margin_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/margin_l"
        />
    <TextView
        android:paddingTop="@dimen/margin_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="action"
        android:id="@+id/action"
        android:layout_toRightOf="@id/icon"
        android:layout_alignParentTop="true"
        style="@style/list_primary_m"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="description"
        android:id="@+id/description"
        android:layout_toRightOf="@id/icon"
        android:layout_below="@id/action"
        style="@style/list_secondary_m"
        />
</RelativeLayout>