<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/font_list"
    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/darklist_primary_xl"
        android:text="darklist_primary_xl" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/darklist_primary_xl_bold"
        android:text="darklist_primary_xl_bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/darklist_primary_l"
        android:text="darklist_primary_l" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/darklist_primary_l_bold"
        android:text="darklist_primary_l_bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/darklist_primary_m"
        android:text="darklist_primary_m" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/darklist_primary_m_bold"
        android:text="darklist_primary_m_bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/darklist_primary_s"
        android:text="darklist_primary_s" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/darklist_primary_s_bold"
        android:text="darklist_primary_s_bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/darklist_primary_xs"
        android:text="darklist_primary_xs" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/darklist_primary_xs_bold"
        android:text="darklist_primary_xs_bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/darklist_primary_xxs"
        android:text="darklist_primary_xxs" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/darklist_primary_xxs_bold"
        android:text="darklist_primary_xxs_bold" />

</LinearLayout>
</ScrollView>