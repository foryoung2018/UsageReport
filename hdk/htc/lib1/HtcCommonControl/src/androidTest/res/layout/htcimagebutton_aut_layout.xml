<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myns="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <!-- Light mode -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff4567"
            android:gravity="center"
            android:text="HtcImage Light mode" />

        <com.htc.lib1.cc.widget.HtcImageButton
            android:id="@+id/img_light"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:src="@drawable/icon_btn_phone_light" />

        <!-- Dark mode -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff4567"
            android:gravity="center"
            android:text="HtcImage/RimImageButton Dark mode" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.htc.lib1.cc.widget.HtcImageButton
                android:id="@+id/img_dark"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:src="@drawable/icon_btn_phone_dark"
                myns:backgroundMode="dark" />
        </LinearLayout>

        <!-- API Test -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff4567"
            android:gravity="center"
            android:text="setColorOn()/stayInPress()" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.htc.lib1.cc.widget.HtcImageButton
                android:id="@+id/img_coloron"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:src="@drawable/icon_btn_phone_light" />

            <com.htc.lib1.cc.widget.HtcImageButton
                android:id="@+id/img_inpress"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:src="@drawable/icon_btn_phone_light" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>