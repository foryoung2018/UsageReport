    xmlns:htc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.htc.lib1.cc.widget.HtcListItemQuickContactBadge
        android:id="@+id/photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        htc:layout_type="size_wrap_content" />

    <com.htc.lib1.cc.widget.HtcListItemMessageBody
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        htc:layout_type="size_rest" />

</com.htc.lib1.cc.widget.ListItem>