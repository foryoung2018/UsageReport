    xmlns:htc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.htc.lib1.cc.widget.HtcListItemQuickContactBadge
        android:id="@+id/photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        htc:layout_type="size_wrap_content|align_start_edge" />

    <com.htc.lib1.cc.widget.HtcListItem2LineText
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        htc:layout_type="size_auto_2_3_rest" />

    <com.htc.lib1.cc.widget.HtcListItem2LineStamp
        android:id="@+id/stamp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        htc:layout_type="size_auto_1_3_rest" />

</com.htc.lib1.cc.widget.ListItem>