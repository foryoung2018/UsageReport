<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:htc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.htc.lib1.cc.widget.HtcFooter
        android:id="@+id/footertextbutton_dark_withicon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        htc:backgroundMode="dark" >

        <com.htc.lib1.cc.widget.HtcFooterTextButton
            android:id="@+id/footertextbutton_left"
            android:drawableTop="@drawable/icon_btn_search_dark"
            android:focusable="false"
            android:text="@string/footerbutton_longstring"
            htc:backgroundMode="dark" />

        <com.htc.lib1.cc.widget.HtcFooterTextButton
            android:drawableTop="@drawable/icon_btn_search_dark"
            android:focusable="false"
            android:text="@string/footerbutton_longstring_space"
            htc:backgroundMode="dark" />

        <com.htc.lib1.cc.widget.HtcFooterTextButton
            android:drawableTop="@drawable/icon_btn_search_dark"
            android:focusable="false"
            htc:backgroundMode="dark" />

        <com.htc.lib1.cc.widget.HtcFooterTextButton
            android:drawableTop="@drawable/icon_btn_search_dark"
            android:focusable="false"
            htc:backgroundMode="dark" />
    </com.htc.lib1.cc.widget.HtcFooter>

</LinearLayout>