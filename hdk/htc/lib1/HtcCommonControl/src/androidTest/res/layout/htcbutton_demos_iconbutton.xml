<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myns="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <!-- HtcIconButton Light mode -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.htc.lib1.cc.widget.HtcIconButton
                android:id="@+id/icon_light_text_image"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:drawableTop="@drawable/icon_btn_phone_light"
                android:text="@string/button_demo_string_2"
                android:textAppearance="@style/button_primary_l" />

            <com.htc.lib1.cc.widget.HtcIconButton
                android:id="@+id/icon_light_image"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:drawableTop="@drawable/icon_btn_phone_light"
                android:textAppearance="@style/button_primary_l" />

            <com.htc.lib1.cc.widget.HtcIconButton
                android:id="@+id/icon_light_text"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:text="@string/button_demo_string_2"
                android:textAppearance="@style/button_primary_l" />
        </LinearLayout>

        <!-- HtcIconButton Dark mode -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.htc.lib1.cc.widget.HtcIconButton
                android:id="@+id/icon_dark_text_image"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:drawableTop="@drawable/icon_btn_phone_dark"
                android:text="@string/button_demo_string_2"
                android:textAppearance="@style/b_button_primary_l"
                myns:backgroundMode="dark" />

            <com.htc.lib1.cc.widget.HtcIconButton
                android:id="@+id/icon_dark_image"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:drawableTop="@drawable/icon_btn_phone_dark"
                android:textAppearance="@style/b_button_primary_l"
                myns:backgroundMode="dark" />

            <com.htc.lib1.cc.widget.HtcIconButton
                android:id="@+id/icon_dark_text"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:text="@string/button_demo_string_2"
                android:textAppearance="@style/b_button_primary_l"
                myns:backgroundMode="dark" />
        </LinearLayout>

        <!-- HtcIconButton AutoMotiveLight mode -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.htc.lib1.cc.widget.HtcIconButton
                android:id="@+id/icon_automotivelight_text_image"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:drawableTop="@drawable/icon_btn_phone_light"
                android:text="@string/button_demo_string_2"
                android:textAppearance="@style/button_primary_l"
                myns:backgroundMode="automotiveLight" />

            <com.htc.lib1.cc.widget.HtcIconButton
                android:id="@+id/icon_automotivelight_image"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:drawableTop="@drawable/icon_btn_phone_light"
                android:textAppearance="@style/button_primary_l"
                myns:backgroundMode="automotiveLight" />

            <com.htc.lib1.cc.widget.HtcIconButton
                android:id="@+id/icon_automotivelight_text"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:text="@string/button_demo_string_2"
                android:textAppearance="@style/button_primary_l"
                myns:backgroundMode="automotiveLight" />
        </LinearLayout>

        <!-- HtcIconButton AutoMotiveDark mode -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.htc.lib1.cc.widget.HtcIconButton
                android:id="@+id/icon_automotivedark_text_image"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:drawableTop="@drawable/icon_btn_phone_dark"
                android:text="@string/button_demo_string_2"
                android:textAppearance="@style/b_button_primary_l"
                myns:backgroundMode="automotiveDark" />

            <com.htc.lib1.cc.widget.HtcIconButton
                android:id="@+id/icon_automotivedark_image"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:drawableTop="@drawable/icon_btn_phone_dark"
                android:textAppearance="@style/b_button_primary_l"
                myns:backgroundMode="automotiveDark" />

            <com.htc.lib1.cc.widget.HtcIconButton
                android:id="@+id/icon_automotivedark_text"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:text="@string/button_demo_string_2"
                android:textAppearance="@style/b_button_primary_l"
                myns:backgroundMode="automotiveDark" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>