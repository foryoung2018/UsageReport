<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myns="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <!-- Light mode -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff4567"
            android:gravity="center"
            android:text="HtcImage/RimImageButton Light mode" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.htc.lib1.cc.widget.HtcImageButton
                android:id="@+id/img_light"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:src="@drawable/icon_btn_phone_light" />

            <com.htc.lib1.cc.widget.HtcImageButton
                android:id="@+id/img_light_disable"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height" />

            <com.htc.lib1.cc.widget.HtcRimImageButton
                android:id="@+id/rimimg_light"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:src="@drawable/icon_btn_phone_light" />

            <com.htc.lib1.cc.widget.HtcRimImageButton
                android:id="@+id/rimimg_light_disable"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height" />
        </LinearLayout>

        <!-- Dark mode -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff4567"
            android:gravity="center"
            android:text="HtcImage/RimImageButton Dark mode" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.htc.lib1.cc.widget.HtcRimImageButton
                android:id="@+id/rimimg_dark"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:src="@drawable/icon_btn_phone_dark"
                myns:backgroundMode="dark" />

            <com.htc.lib1.cc.widget.HtcRimImageButton
                android:id="@+id/rimimg_dark_disable"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                myns:backgroundMode="dark" />
        </LinearLayout>

        <!-- API Test -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff4567"
            android:gravity="center"
            android:text="setColorOn()/stayInPress()" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.htc.lib1.cc.widget.HtcImageButton
                android:id="@+id/img_coloron"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:src="@drawable/icon_btn_phone_light" />

            <com.htc.lib1.cc.widget.HtcRimImageButton
                android:id="@+id/rimimg_coloron"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:src="@drawable/icon_btn_phone_light" />

            <com.htc.lib1.cc.widget.HtcImageButton
                android:id="@+id/img_inpress"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:src="@drawable/icon_btn_phone_light" />

            <com.htc.lib1.cc.widget.HtcRimImageButton
                android:id="@+id/rimimg_inpress"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:src="@drawable/icon_btn_phone_light" />
        </LinearLayout>

        <!-- No overlay/Usage with PopupWindow -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff4567"
            android:gravity="center"
            android:text="Turn off overlay/Usage with PopupWindow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.htc.lib1.cc.widget.HtcImageButton
                android:id="@+id/img_noanim"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:src="@drawable/icon_btn_phone_light"
                myns:isContentMultiply="false" />

            <com.htc.lib1.cc.widget.HtcRimImageButton
                android:id="@+id/rimimg_noanim"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:src="@drawable/icon_btn_phone_light"
                myns:isContentMultiply="false" />

            <com.htc.lib1.cc.widget.HtcImageButton
                android:id="@+id/img_popup"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:src="@drawable/icon_btn_phone_light" />

            <com.htc.lib1.cc.widget.HtcRimImageButton
                android:id="@+id/rimimg_popup"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:src="@drawable/icon_btn_phone_light" />
        </LinearLayout>

        <!-- HtcProgressButton -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff4567"
            android:gravity="center"
            android:text="HtcProgressButton" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#161616"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.htc.lib1.cc.widget.HtcProgressButton
                android:id="@+id/prgtbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                myns:backgroundMode="dark" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>