<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Preference" parent="@android:style/Theme.Holo.Light">
        <item name="android:textAppearanceMedium">@style/list_primary_m</item>
        <item name="android:textAppearanceSmall">@style/list_secondary_m</item>
        <item name="android:textColorSecondary">@color/light_primaryfont</item>
        <item name="android:listSeparatorTextViewStyle">@style/ListSeparatorTextViewStyle</item>
        <item name="android:scrollbarSize">@dimen/margin_l</item>
    </style>

    <style name="ListSeparatorTextViewStyle" parent="@android:style/Widget.Holo.TextView">
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_separatorfont_color</item>
        <item name="android:textSize">@dimen/separator_primary_m</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/margin_l</item>
    </style>

</resources>