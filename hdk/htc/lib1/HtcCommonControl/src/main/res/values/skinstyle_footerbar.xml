<resources>
    <!-- HtcFooter and HtcFooterButton Start -->
    <style name="FooterBarStyle">
        <item name="android:layout_height">@dimen/htc_footer_height</item>
        <item name="android:layout_width">@dimen/htc_footer_height</item>
        <item name="def_child_weight">1.0</item>
        <!-- skinable attribute -->
        <item name="android:src">@drawable/footerbkg</item>
        <item name="backgroundMode">light</item>
        <!-- add for sense60 start -->
        <item name="android:divider">@drawable/common_footer_divider</item>
        <item name="footer_display_mode">mode_default</item>
        <!-- add for sense60 end -->
    </style>
    <style name="FooterBarStyle.Dark">
        <item name="backgroundMode">dark</item>
    </style>
    <style name="FooterBarStyle.Full">
        <item name="backgroundMode">full</item>
    </style>
    <style name="FooterBarButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundMode">light</item>
    </style>
    <style name="FooterBarButtonStyle.Dark">
        <item name="backgroundMode">dark</item>
    </style>
    <!-- HtcFooter and HtcFooterButton End -->
</resources>