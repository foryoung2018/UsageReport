<!--
     used for HtcProgressDialog, horizontal progress bar style.
     paddings are set for concatenated with text messages.
     if not, HtcProgressDialog will adjust the paddings programmatically.
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="match_parent"
    android:paddingLeft="@dimen/margin_l"
    android:paddingRight="@dimen/margin_l"
    android:paddingBottom="@dimen/margin_xs_2" >
        <com.htc.lib1.cc.widget.HtcProgressBar android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_s"
            android:layout_alignParentTop="true" />
        <TextView
            android:id="@+id/progress_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/list_secondary_m"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/progress"
        />
        <TextView
            android:id="@android:id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/progress_percent"
            android:layout_alignTop="@id/progress_percent"
            android:layout_marginLeft="@dimen/margin_s"
            style="@style/list_secondary_m"
        />
</RelativeLayout>
