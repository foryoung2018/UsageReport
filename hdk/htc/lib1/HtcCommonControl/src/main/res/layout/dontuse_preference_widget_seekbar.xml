<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:paddingEnd="@dimen/margin_l"
    android:paddingStart="@dimen/margin_l" >

    <com.htc.lib1.cc.widget.preference.DontUsePreferenceColorIcon
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_l"
        android:layout_marginEnd="@dimen/margin_l"
        android:layout_marginStart="@dimen/margin_m"
        android:layout_marginTop="@dimen/spacing_2"
        android:layout_weight="1" >

        <TextView
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            android:textAppearance="@style/list_primary_m" />

        <TextView
            android:id="@android:id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@android:id/title"
            android:layout_below="@android:id/title"
            android:maxLines="4"
            android:textAppearance="@style/list_secondary_m"
            android:textColor="@color/light_primaryfont" />

        <!-- Preference should place its actual preference widget here. -->
        <LinearLayout
            android:id="@android:id/widget_frame"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignStart="@android:id/title"
            android:layout_below="@android:id/summary"
            android:gravity="center"
            android:minWidth="0dp"
            android:orientation="vertical" />

        <com.htc.lib1.cc.widget.preference.DontUsePreferenceSeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@android:id/summary"
            android:layout_toEndOf="@android:id/widget_frame" />
    </RelativeLayout>

</LinearLayout>
