<com.htc.lib1.cc.widget.quicktips.RotateRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quicktip_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/visible_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/quicktip_image_section"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l"
            android:background="#1A000000"
            android:orientation="horizontal"
            android:visibility="gone" >


            <ImageView
                android:id="@+id/quicktip_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/quicktip_close_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_marginRight="@dimen/spacing"
                android:layout_marginTop="@dimen/spacing" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/quicktip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/quicktip_close_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_marginRight="@dimen/margin_m"
                android:layout_marginTop="@dimen/margin_m"/>

        </LinearLayout>
    </LinearLayout>

</com.htc.lib1.cc.widget.quicktips.RotateRelativeLayout>
