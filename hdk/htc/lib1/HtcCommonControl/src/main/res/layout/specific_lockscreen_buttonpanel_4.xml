<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/button_panel_height"
    android:orientation="horizontal" >

    <com.htc.lib1.cc.widget.reminder.ui.footer.ReminderSphere
        android:id="@+id/buttonpanel_left_1"
        android:layout_width="@dimen/button_panel_four_button_width"
        android:layout_height="@dimen/button_panel_height"
        android:layout_weight="1.0"
        android:gravity="center" >
        <RelativeLayout
            android:layout_width="@dimen/button_panel_four_button_width"
            android:layout_height="@dimen/button_panel_height" >
            <com.htc.lib1.cc.widget.reminder.ui.SWLayerTextView
                style="@style/fixed_lockscreen_12"
                android:id="@+id/buttonpanel_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/button_panel_button_title_height"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/button_panel_four_button_title_margin_left"
                android:layout_marginRight="@dimen/button_panel_four_button_title_margin_right"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="2" />
            <ImageView
                android:id="@+id/buttonpanel_icon"
                android:layout_width="@dimen/button_panel_button_icon_width"
                android:layout_height="@dimen/button_panel_button_icon_height"
                android:layout_above="@id/buttonpanel_title"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/button_panel_button_icon_margin_bottom"
                android:gravity="center_horizontal"
                android:scaleType="centerInside" />
        </RelativeLayout>
    </com.htc.lib1.cc.widget.reminder.ui.footer.ReminderSphere>

    <com.htc.lib1.cc.widget.reminder.ui.footer.ReminderSphere
        android:id="@+id/buttonpanel_left_2"
        android:layout_width="@dimen/button_panel_four_button_width"
        android:layout_height="@dimen/button_panel_height"
        android:layout_weight="1.0"
        android:gravity="center" >
        <RelativeLayout
            android:layout_width="@dimen/button_panel_four_button_width"
            android:layout_height="@dimen/button_panel_height" >
            <com.htc.lib1.cc.widget.reminder.ui.SWLayerTextView
                style="@style/fixed_lockscreen_12"
                android:id="@id/buttonpanel_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/button_panel_button_title_height"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/button_panel_four_button_title_margin_left"
                android:layout_marginRight="@dimen/button_panel_four_button_title_margin_right"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="2" />
            <ImageView
                android:id="@id/buttonpanel_icon"
                android:layout_width="@dimen/button_panel_button_icon_width"
                android:layout_height="@dimen/button_panel_button_icon_height"
                android:layout_above="@id/buttonpanel_title"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/button_panel_button_icon_margin_bottom"
                android:gravity="center_horizontal"
                android:scaleType="centerInside" />
        </RelativeLayout>
    </com.htc.lib1.cc.widget.reminder.ui.footer.ReminderSphere>

    <!-- Divider #FFFFFF 20% -->
    <RelativeLayout
        android:id="@+id/buttonpanel_middle_gap"
        android:layout_width="@dimen/two_tile_middle_gap_width"
        android:layout_height="@dimen/button_panel_height"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="#FFFFFF"
        android:alpha="0.2"
        android:visibility="gone" />

    <com.htc.lib1.cc.widget.reminder.ui.footer.ReminderSphere
        android:id="@+id/buttonpanel_right_1"
        android:layout_width="@dimen/button_panel_four_button_width"
        android:layout_height="@dimen/button_panel_height"
        android:layout_weight="1.0"
        android:gravity="center" >
        <RelativeLayout
            android:layout_width="@dimen/button_panel_four_button_width"
