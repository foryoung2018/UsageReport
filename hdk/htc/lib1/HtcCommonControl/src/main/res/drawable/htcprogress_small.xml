<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="270"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="630" >

    <shape
        android:innerRadiusRatio="2.8"
        android:shape="ring"
        android:thicknessRatio="9.8"
        android:useLevel="false" >
        <size
            android:height="@dimen/htcprogress_small_size"
            android:width="@dimen/htcprogress_small_size" />

        <gradient
            android:centerY="0.50"
            android:endColor="#ffffffff"
            android:startColor="#00ffffff"
            android:type="sweep"
            android:useLevel="false" >
        </gradient>
    </shape>

</rotate>