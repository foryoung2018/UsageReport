<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="HtcWidget.ActionBar" parent="@android:style/Widget.Material.ActionBar">
        <!-- the transparent mode can't work reason -->
        <item name="android:background">@color/starting_window_header</item>
        <item name="android:height">?android:actionBarSize</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="android:displayOptions">none</item>
    </style>
    <style name="HtcWidget.ActionMode" parent="@android:style/Widget.Material.ActionMode">
        <!-- the transparent mode can't work reason -->
        <item name="android:background">?android:attr/actionModeBackground</item>
        <item name="android:backgroundSplit">?android:attr/actionModeSplitBackground</item>
        <item name="android:height">?android:actionBarSize</item>
        <item name="android:titleTextStyle">@style/ab_primary_textview_style</item>
        <item name="android:subtitleTextStyle">@style/ab_secondary_textview_style</item>
    </style>
    <style name="ActionBarWidgetTheme">
        <item name="android:dropDownListViewStyle">@style/HtcWidget.ListView.DropDown.ActionBar</item>
        <item name="android:listPreferredItemHeightSmall">@dimen/htc_list_item_height_popup_menu</item>
        <item name="android:popupMenuStyle">@style/HtcWidget.PopupMenu.ActionBar</item>
        <item name="android:listPopupWindowStyle">@style/HtcWidget.ListPopupWindow.ActionBar</item>
        <item name="android:textAppearanceLargePopupMenu">@style/darklist_primary_s</item>
    </style>
    <style name="HtcWidget.ListPopupWindow.ActionBar" parent="@android:style/Widget.Material.ListPopupWindow">
        <item name="android:popupBackground">@drawable/popupbg_inset</item>
    </style>
    <style name="HtcWidget.PopupMenu.ActionBar" parent="@android:style/Widget.Material.PopupMenu">
        <item name="android:popupBackground">@drawable/popupbg_inset</item>
    </style>
    <style name="HtcWidget.PopupMenu.Overflow" parent="@android:style/Widget.Material.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/popupbg_inset</item>
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
    </style>
    <style name="HtcWidget.ListView.DropDown.ActionBar" parent="@android:style/Widget.Material.ListView.DropDown">
        <item name="android:divider">@drawable/inset_list_divider_dark</item>
        <item name="android:listSelector">@drawable/list_selector_dark</item>
    </style>
    <style name="HtcWidget.ActionButton" parent="@android:style/Widget.Material.ActionButton">
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:minWidth">@dimen/action_button_min_width</item>
        <item name="android:minHeight">?android:attr/actionBarSize</item>
        <item name="android:layout_width">@dimen/action_button_min_width</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>
    <style name="HtcWidget.ActionButton.Overflow" parent="@android:Widget.Material.ActionButton.Overflow">
        <item name="android:src">@drawable/icon_btn_menu_dark</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:minWidth">@dimen/action_button_min_width</item>
        <item name="android:minHeight">?android:attr/actionBarSize</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>
    <style name="HtcWidget.ActionButton.CloseMode" parent="@android:style/Widget.Material.ActionButton.CloseMode">
        <item name="android:minHeight">?android:attr/actionBarSize</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>
</resources>