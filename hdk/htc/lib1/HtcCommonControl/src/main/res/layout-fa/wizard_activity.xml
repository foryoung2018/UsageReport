<com.htc.lib1.cc.widget.HtcOverlapLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overlap_layout"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/base_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_primaryfont_color">

        <com.htc.lib1.cc.widget.HtcProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/htcProgressBarStyleHorizontalFull"
            android:secondaryProgress="0" />

        <TextView
            android:id="@+id/tip"
            android:visibility="gone"
            android:background="@drawable/section_divider_top"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/htc_setupwizard_subtitle_height"
            android:paddingLeft="@dimen/margin_m"
            android:paddingRight="@dimen/margin_m"
            style="@style/fixed_list_body_primary_s"/>

        <com.htc.lib1.cc.widget.HtcListView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawSelectorOnTop="false"
            style="@style/HtcListView"/>

    </LinearLayout>

    <com.htc.lib1.cc.widget.HtcFooter
        android:id="@+id/footer"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <com.htc.lib1.cc.widget.HtcFooterButton
            android:id="@+id/next"
            android:text="@string/va_next" />

    <com.htc.lib1.cc.widget.HtcFooterButton
            android:id="@+id/back"
            android:text="@string/va_back" />

    </com.htc.lib1.cc.widget.HtcFooter>

</com.htc.lib1.cc.widget.HtcOverlapLayout>
