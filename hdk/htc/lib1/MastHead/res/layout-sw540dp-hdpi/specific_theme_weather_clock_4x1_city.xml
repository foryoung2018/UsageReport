<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1">
    <TextView
        android:id="@+id/align_base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/theme_temp_block_margin_top"
        android:singleLine="true"
        android:text="@string/comma"
        android:visibility="invisible"
        style="@style/weather_clock_week_date_city_temp"/>
    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/theme_italic_padding"
        android:layout_alignBaseline="@id/align_base"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:visibility="gone"
        style="@style/weather_clock_week_date_city_temp"/>
</RelativeLayout>
