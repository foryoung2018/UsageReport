<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/weather_clock_4x1_temp_layout_params"
    android:orientation="horizontal"
    android:layout_weight="0"
    android:visibility="gone">
    <TextView
        android:id="@+id/comma"
        android:layout_height="wrap_content"
        style="@style/weather_clock_4x1_comma_layout_params"
        android:layout_weight="0"
        android:layout_marginTop="@dimen/theme_temp_block_margin_top"
        android:singleLine="true"
        android:text="@string/comma"/>
    <TextView
        android:id="@+id/temparature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/comma"
        android:paddingRight="@dimen/theme_italic_padding"
        android:layout_marginTop="@dimen/theme_temp_block_margin_top"
        android:singleLine="true"
        style="@style/weather_clock_week_date_city_temp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/temparature"
        android:layout_marginLeft="@dimen/theme_italic_padding_shift">
        <TextView
            android:id="@+id/temparature_degree_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/theme_italic_padding"
            android:singleLine="true"
            android:layout_marginTop="@dimen/theme_temp_symbol_margin_top"
            android:layout_marginBottom="@dimen/theme_temp_symbol_margin_bottom"
            android:text="@string/temp_degree"
            style="@style/custom_fixed_masthead_03"/>
        <TextView
            android:id="@+id/temparature_degree_c_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/theme_italic_padding_shift"
            android:paddingRight="@dimen/spacing"
            android:singleLine="true"
            android:layout_marginTop="@dimen/theme_temp_c_f_margin_top"
            style="@style/custom_fixed_masthead_04"/>
    </LinearLayout>
</RelativeLayout>
