<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/theme0_info_temp_area_margin_top"
	android:layout_weight="1">
    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/clock_weather_icon_location_dark_s"
		android:layout_weight="1"
        android:singleLine="true"
        android:visibility="gone"
        android:ellipsize="marquee"        
        style="@style/custom_fixed_masthead_01"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0" >
        <TextView
            android:id="@+id/separatrix"
            style="@style/custom_fixed_masthead_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@string/dash"
            android:visibility="gone" />
        <TextView
            android:id="@+id/week_date"
            style="@style/custom_fixed_masthead_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:ellipsize="marquee"
            android:singleLine="true" />

        <TextView
            android:id="@+id/holiday_name"
            style="@style/custom_fixed_masthead_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:singleLine="true" />

    </LinearLayout>
</LinearLayout>
